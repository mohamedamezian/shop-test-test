{% comment %} Instagram Posts Display Block {% endcomment %}

<div class="instagram-posts-section">
  {% if block.settings.heading %}
    <h2 class="instagram-posts-heading">{{ block.settings.heading }}</h2>
  {% endif %}

  <div class="instagram-posts-grid">
    {% assign all_posts = shop.metaobjects['instagram-post'].values %}
    {% assign posts_limit = block.settings.posts_limit | default: 12 %}

    {% if all_posts.size > 0 %}
      {% for post in all_posts limit: posts_limit %}
        <div class="instagram-post-item">
          {% comment %} Parse data as string since it's stored as JSON {% endcomment %}
          {% assign data = post.data.value | append: '' %}
          {% assign caption = post.caption.value | default: '' | truncate: 150 %}
          {% assign link = data | split: '"permalink"=>"' | last | split: '"' | first %}

          {% comment %} Display post using Shopify-hosted images/videos {% endcomment %}
          <a href="{{ link }}" target="_blank" class="instagram-post-link">
            <div class="instagram-post-images">
              {% comment %} Access first media from MediaListDrop {% endcomment %}
              {% if post.images.value %}
                {% for media in post.images.value limit: 1 %}
                  {% comment %} Debug output - remove after testing {% endcomment %}
                  <div style="display:none;" class="debug-media">
                    Type: {{ media.media_content_type -}}
                    <br>
                    Has sources: {{ media.sources -}}
                    <br>
                    Media object: {{ media }}
                  </div>

                  {% comment %} Videos have sources property {% endcomment %}
                  {% if media.sources %}
                    <video
                      class="instagram-video"
                      loop
                      muted
                      playsinline
                      preload="auto"
                      data-video="true"
                    >
                      {% for source in media.sources %}
                        <source src="{{ source.url }}" type="{{ source.mime_type }}">
                      {% endfor %}
                    </video>
                  {% else %}
                    {% comment %} This is an image {% endcomment %}
                    <img
                      src="{{ media | image_url: width: 600 }}"
                      alt="{{ caption }}"
                      width="600"
                      height="600"
                      loading="lazy"
                    >
                  {% endif %}
                {% endfor %}
              {% endif %}
              <div class="instagram-post-overlay">
                <p class="instagram-post-caption">{{ caption }}</p>
              </div>
            </div>
          </a>
        </div>
      {% endfor %}
    {% else %}
      <p>No Instagram posts available.</p>
    {% endif %}
  </div>
</div>

<style>
  .instagram-posts-section {
    padding: 2rem 0;
  }

  .instagram-posts-heading {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 2rem;
  }

  .instagram-posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }

  .instagram-post-item {
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
  }

  .instagram-post-item:hover {
    transform: translateY(-4px);
  }

  .instagram-post-link {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .instagram-post-images {
    position: relative;
    overflow: hidden;
    width: 100%;
    height: 0;
    padding-bottom: 100%; /* 1:1 aspect ratio for square grid */
  }

  .instagram-post-images img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .instagram-post-images video {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .instagram-post-link:hover .instagram-post-images img,
  .instagram-post-link:hover .instagram-post-images video {
    transform: scale(1.05);
  }

  .instagram-post-image {
    position: relative;
    overflow: hidden;
  }

  .instagram-post-image img {
    width: 100%;
    height: 300px;
    object-fit: cover;
    display: block;
    transition: transform 0.3s ease;
  }

  .instagram-post-link:hover .instagram-post-image img {
    transform: scale(1.05);
  }

  .instagram-post-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease;
    padding: 1.5rem;
  }

  .instagram-post-link:hover .instagram-post-overlay {
    opacity: 1;
  }

  .instagram-post-caption {
    color: white;
    font-size: 0.9rem;
    line-height: 1.4;
    text-align: center;
    margin: 0;
  }
</style>

<script>
  // Play videos on hover
  (function () {
    'use strict';

    function initVideoHover() {
      const instagramPosts = document.querySelectorAll('.instagram-post-item');

      console.log('Found', instagramPosts.length, 'Instagram posts');

      instagramPosts.forEach(function (post) {
        const video = post.querySelector('video');

        if (video) {
          console.log('Found video in post:', video);

          // Make sure video is ready
          video.load();

          // Play video when hovering over the post
          post.addEventListener('mouseenter', function () {
            console.log('Mouse entered, playing video');
            video.play().catch(function (error) {
              console.error('Video play failed:', error);
            });
          });

          // Pause and reset video when mouse leaves
          post.addEventListener('mouseleave', function () {
            console.log('Mouse left, pausing video');
            video.pause();
            video.currentTime = 0;
          });
        }
      });
    }

    // Initialize when DOM is ready
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initVideoHover);
    } else {
      initVideoHover();
    }
  })();
</script>

{% schema %}
{
  "name": "Instagram Posts",
  "target": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Instagram Feed"
    },
    {
      "type": "range",
      "id": "posts_limit",
      "label": "Number of Posts",
      "min": 1,
      "max": 24,
      "step": 1,
      "default": 12
    }
  ]
}
{% endschema %}
